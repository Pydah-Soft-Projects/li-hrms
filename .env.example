# HRMS Environment Configuration
# Copy this file to .env and update the values.
# Production guidance:
# - Use HTTPS for all service URLs (e.g., FRONTEND_URL, BIOMETRIC_API_ENDPOINT, API endpoints).
# - Use strong, unique secrets for JWT_SECRET, SESSION_SECRET and other credentials.
# - Never commit real credentials; this file is an example only.
# - Store and rotate secrets via a secure secrets manager (not in source control).
# - Keep separate .env files per environment (development / staging / production) with environment-specific values.

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/hrms
MONGODB_TEST_URI=mongodb://localhost:27017/hrms_test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=7d

# Microservice Security
HRMS_MICROSERVICE_SECRET_KEY=your-microservice-secret-key-here

# MSSQL Configuration (if using MSSQL as data source)
MSSQL_SERVER=localhost
MSSQL_DATABASE=hrms_db   # example non-admin database
MSSQL_USERNAME=hrms_user # use a non-admin DB user (principle of least privilege)
MSSQL_PASSWORD=your-password-here
MSSQL_ENCRYPT=true

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Application Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Redis Configuration (if using Redis for caching)
REDIS_URL=redis://localhost:6379

# External API Keys (if needed)
API_KEY_EXTERNAL=your-external-api-key

# Biometric Device Configuration
BIOMETRIC_API_ENDPOINT=http://localhost:8080/api
BIOMETRIC_TIMEOUT=30000

# Leave Configuration
DEFAULT_PAID_LEAVES=12
DEFAULT_CASUAL_LEAVES=12
FINANCIAL_YEAR_START=04-01 # MM-DD format; e.g., 04-01 for April 1st

# Attendance Configuration
DEFAULT_GRACE_PERIOD=15 # in minutes
MAX_WORKING_HOURS=12
MIN_WORKING_HOURS=4

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15  # window size in minutes
RATE_LIMIT_MAX=100    # max requests per window per IP

# Development/Debug Configuration
DEBUG_MODE=false
ENABLE_CORS=true
